{
  "compilerOptions": {
    "target": "ES2021",              // Cambia a ES2021 o superior
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,            // Ignora errores en archivos de tipos de dependencias
    "types": ["node"]                // Asegura los tipos de Node.js
  },
  "include": ["src/**/*.ts"]
}